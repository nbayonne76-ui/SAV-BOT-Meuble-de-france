# =======================
# SAV-BOT Meuble de France - Environment Configuration
# =======================
# Copy this file to .env and fill in the values
# For Docker: place in project root
# For standalone: place in backend/ directory

# =======================
# Application Configuration
# =======================
APP_NAME=Meuble de France Chatbot
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# =======================
# Database Configuration
# =======================
# Development: sqlite:///./chatbot.db
# Production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./chatbot.db

# PostgreSQL (for docker-compose)
POSTGRES_DB=meubledefrance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# =======================
# Redis Configuration
# =======================
# Development: memory:// (in-memory fallback)
# Production: redis://localhost:6379/0 or redis://:password@host:6379/0
REDIS_URL=memory://
REDIS_PASSWORD=
REDIS_PORT=6379

# =======================
# Security Configuration
# =======================
# IMPORTANT: Generate a secure key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =======================
# API Keys
# =======================
# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# =======================
# CORS Configuration
# =======================
# Comma-separated list of allowed origins
# Development:
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Production (add your domain):
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =======================
# File Upload Configuration
# =======================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,heic,mp4,mov,avi,webm

# =======================
# Rate Limiting
# =======================
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute

# =======================
# Frontend Configuration
# =======================
VITE_API_URL=http://localhost:8000

# =======================
# Docker Ports (for docker-compose)
# =======================
BACKEND_PORT=8000
FRONTEND_PORT=5173
